function sum(arr){

    let newArr=[];
    
for(let i=0;i<arr.length;i++){

    if(Array.isArray(arr[i])){
    
         let sum=0;
         
        for(let j=0;j<arr[i].length;j++){
            
            sum+=arr[i][j];
        }

        newArr[i]=sum
    }
}
return newArr;
}
console.log(sum([[ 8,6], [8,20], [ -6], [ -9, 0, -1]]));
